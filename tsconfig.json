{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["src/tsx/**/*", "src/ts/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/ts/**/*.test.ts",
    "src/tsx/**/*.test.tsx"
  ]
}
